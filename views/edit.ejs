<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('includes/navigation.ejs') %>

    <main>
       <% for (let product of prods) { %>
       <form class="product-form" action="/admin/edit-submit" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" value="<%= product.title%>" id="title">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" value="<%= product.url %>"id="imageURL">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" value="<%= product.price %>" step="0.01">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"> <%= product.description %> </textarea>
            </div>
             <input type="hidden" value="<%= product.id %> " name="productId">
             <button class="btn" type="submit">Edit details</button>
             <% } %>
        </form>
    </main>
<%- include('includes/end.ejs') %>